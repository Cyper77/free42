#!/bin/sh -e
  
# This script builds and packages the Android version.

mkdir -p packages

mkdir android-tmp
cd android-tmp
svn checkout svn://mactv/free42/trunk free42
cd free42/android/app
read -p "Keystore Password: " PWD
VERSION_CODE=`cat ../version.code`
sed -i '' "s/versionCode [0-9]*/versionCode $VERSION_CODE/" build.gradle
VERSION_NAME=`cat ../../VERSION`
sed -i '' "s/versionName \"[^\"]*\"/versionName \"$VERSION_NAME\"/" build.gradle
cd src/main/cpp
sh ./copy-files-release.sh
sh ./build-intel-lib.sh
cd ../../../..
./gradlew -Pandroid.injected.signing.store.password=$PWD -Pandroid.injected.signing.key.password=$PWD assembleRelease
mv app/build/outputs/apk/release/app-release-unsigned.apk ../../../packages/Free42Android.apk
cd ../../..
rm -rf android-tmp
